extends base

block append header
  link(
    rel="stylesheet" 
    href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css"
  )

  script(
      src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"
    )

  block scripts
    script(src="/javascripts/retrieve.js")
    script(src="/javascripts/styleguide.js")
    script(src="/javascripts/xhr.js")
    script(src="/javascripts/entry.js")

  link(rel="stylesheet" type="text/css" href="stylesheets/shared.css")
  link(rel="stylesheet" type="text/css" href="stylesheets/hljs.css")

  block styles
    each val in allStyles || []
      link(rel="stylesheet" type="text/css" href=val)

block content
  block nav 
    nav(class="navbar navbar-toggleable-md")
      ul(class="navbar-nav mr-auto")
        li(class="nav-item")
          a(href="/" class="nav-link") All Examples
        li(class="nav-item")
          a(href="/new" class="nav-link") New Entry
        li(class="nav-item")
          a(href="/folders" class="nav-link") Folders
    
  input(type="hidden" id="ids" value=ids)
