extends base

block styles
  style.
    .card-title {
      text-transform: capitalize;
    }

    h1 {
      margin-bottom: 1em;
    }
block root
  div(class="container")
    <h1>Style Guide</h1>
    div(class="card-columns")
      each val in templates || []
        div(class="card card-outline-primary")
          div(class="card-header")
            a(href=val class="card-link") 
              h4(class="card-title")= val
          div(class="card-footer")
            a(href=val class="card-link") view

      div(class="card card-outline-primary")
        div(class="card-header")
          h4(class="card-title") new section
        div(class="card-footer")
          a(role="button" href="/new/section" class="card-link") create